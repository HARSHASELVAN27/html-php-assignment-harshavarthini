<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Purchase Calculator</title>
</head>
<body>

<h2>Purchase Cost Calculator</h2>

<form method="post">
  <h3>Item 1</h3>
  Price: <input type="number" name="price1" step="0.01" required><br>
  Quantity: <input type="number" name="qty1" required><br><br>

  <h3>Item 2</h3>
  Price: <input type="number" name="price2" step="0.01" required><br>
  Quantity: <input type="number" name="qty2" required><br><br>

  <h3>Item 3</h3>
  Price: <input type="number" name="price3" step="0.01" required><br>
  Quantity: <input type="number" name="qty3" required><br><br>

  <input type="submit" value="Calculate Total">
</form>

<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
  // Get input values and calculate subtotal
  $subtotal = ($_POST['price1'] * $_POST['qty1']) +
              ($_POST['price2'] * $_POST['qty2']) +
              ($_POST['price3'] * $_POST['qty3']);

  // Calculate tax and total
  $tax = $subtotal * 0.10;
  $total = $subtotal + $tax;

  // Display results
  echo "<h3>Results:</h3>";
  echo "Subtotal: $" . number_format($subtotal, 2) . "<br>";
  echo "Tax (10%): $" . number_format($tax, 2) . "<br>";
  echo "Total Cost: $" . number_format($total, 2);
}
?>

</body>
</html>

